@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="min-h-screen bg-gray-100 flex items-center justify-center">
    <div class="bg-white shadow-md rounded-lg p-6 max-w-4xl">
        <h1 class="text-3xl font-bold text-gray-800 mb-4">@ViewData["Title"]</h1>

        <!-- Introduction Section -->
        <section class="mb-6">
            <h2 class="text-2xl font-semibold text-gray-800 mb-2">Introduction</h2>
            <p class="text-gray-600 leading-relaxed">
                This privacy policy outlines how we collect, use, and safeguard your personal information when you use our services.
            </p>
        </section>

        <!-- Data Collection Section -->
        <section class="mb-6">
            <h2 class="text-2xl font-semibold text-gray-800 mb-2">Data Collection</h2>
            <p class="text-gray-600 leading-relaxed">
                We collect personal information in the following ways:
                <ul class="list-inside list-disc text-gray-600">
                    <li>Information you provide to us directly, such as when you create an account, submit a form, or contact us.</li>
                    <li>Data collected automatically when you use our services, such as cookies, usage statistics, and device information.</li>
                </ul>
            </p>
        </section>

        <!-- Data Usage Section -->
        <section class="mb-6">
            <h2 class="text-2xl font-semibold text-gray-800 mb-2">Data Usage</h2>
            <p class="text-gray-600 leading-relaxed">
                We use the data we collect to:
                <ul class="list-inside list-disc text-gray-600">
                    <li>Provide and improve our services.</li>
                    <li>Respond to your inquiries and provide support.</li>
                    <li>Comply with legal obligations.</li>
                </ul>
            </p>
        </section>

        <!-- Data Storage Section -->
        <section class="mb-6">
            <h2 class="text-2xl font-semibold text-gray-800 mb-2">Data Storage</h2>
            <p class="text-gray-600 leading-relaxed">
                Your data is stored securely and only retained for as long as necessary for the purposes outlined in this policy. We use industry-standard security measures to protect your information.
            </p>
        </section>

        <!-- User Rights Section -->
        <section class="mb-6">
            <h2 class="text-2xl font-semibold text-gray-800 mb-2">Your Rights</h2>
            <p class="text-gray-600 leading-relaxed">
                You have the following rights concerning your personal data:
                <ul class="list-inside list-disc text-gray-600">
                    <li>The right to access your personal data.</li>
                    <li>The right to correct any inaccuracies in your data.</li>
                    <li>The right to request the deletion of your data.</li>
                    <li>The right to withdraw consent for data processing, where applicable.</li>
                </ul>
            </p>
        </section>

        <!-- Contact Section -->
        <section class="mb-6">
            <h2 class="text-2xl font-semibold text-gray-800 mb-2">Contact Us</h2>
            <p class="text-gray-600 leading-relaxed">
                If you have any questions or concerns about your privacy or this policy, please contact us at RHConnect@gmail.com.
            </p>
        </section>

        <!-- Footer Section -->
        <section>
            <p class="text-center text-gray-600 text-sm mt-8">
                © [2025] RH Connect. All rights reserved.
            </p>
        </section>
    </div>
</div>
