@model GestionEmployes.Models.Tache

<h1 class="text-3xl font-bold text-center text-red-600 my-6">Supprimer une Tâche</h1>

<div class="text-center mb-4">
    <p class="text-lg text-gray-700">Êtes-vous sûr de vouloir supprimer cette tâche ?</p>
</div>

<div class="text-center mb-4">
    <h3 class="text-xl font-semibold text-gray-800">Tâche: @Model.NomTache</h3>
    <p class="text-lg text-gray-700">Employé: @Model.Employe.NomEmploye</p>
    <p class="text-lg text-gray-700">Statut: @Model.Statut</p>
</div>

<form method="post" class="flex justify-center gap-4">
    <input type="submit" value="Supprimer" class="bg-red-600 text-white px-6 py-2 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 cursor-pointer" />
    <a href="@Url.Action("Index")" class="bg-gray-600 text-white px-6 py-2 rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 cursor-pointer">
        Annuler
    </a>
</form>
