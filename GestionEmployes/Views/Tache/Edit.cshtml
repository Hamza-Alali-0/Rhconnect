@model GestionEmployes.Models.Tache

@{
    ViewData["Title"] = "Éditer une Tâche";
}

<h1 class="text-3xl font-bold text-center text-blue-600 my-6">Éditer une Tâche</h1>

<h4 class="text-xl font-semibold text-center text-blue-600">Détails de la tâche</h4>
<hr class="my-4" />

<div class="max-w-4xl mx-auto bg-white p-6 shadow-lg rounded-lg">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

        <!-- Hidden field for TacheId -->
        <input type="hidden" asp-for="TacheId" />

        <!-- Nom de la tâche -->
        <div class="form-group mb-4">
            <label asp-for="NomTache" class="block text-gray-700 font-medium">Nom de la tâche</label>
            <input asp-for="NomTache" class="form-input w-full border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="NomTache" class="text-danger text-sm"></span>
        </div>

        <!-- Description -->
        <div class="form-group mb-4">
            <label asp-for="Description" class="block text-gray-700 font-medium">Description</label>
            <textarea asp-for="Description" class="form-input w-full border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
            <span asp-validation-for="Description" class="text-danger text-sm"></span>
        </div>

        <!-- Date de début -->
        <div class="form-group mb-4">
            <label asp-for="DateDebut" class="block text-gray-700 font-medium">Date de début</label>
            <input asp-for="DateDebut" class="form-input w-full border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" type="date" />
            <span asp-validation-for="DateDebut" class="text-danger text-sm"></span>
        </div>

        <!-- Date de fin -->
        <div class="form-group mb-4">
            <label asp-for="DateFin" class="block text-gray-700 font-medium">Date de fin</label>
            <input asp-for="DateFin" class="form-input w-full border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" type="date" />
            <span asp-validation-for="DateFin" class="text-danger text-sm"></span>
        </div>


        <div class="form-group mb-4">
            <label asp-for="Statut" class="block text-gray-700 font-medium">Statut</label>
            <select asp-for="Statut" class="form-input w-full border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option value="">Sélectionner un statut</option>
                <option value="Pending">En attente</option>
                <option value="In Progress">En cours</option>
                <option value="Completed">Terminé</option>
            </select>
            <span asp-validation-for="Statut" class="text-danger text-sm"></span>
        </div>

        <!-- Employé Assigné -->
        <div class="form-group mb-4">
            <label asp-for="EmployeId" class="block text-gray-700 font-medium">Employé Assigné</label>
            <select asp-for="EmployeId" class="form-input w-full border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" asp-items="ViewBag.Employes">
                <option value="">Sélectionner un employé</option>
            </select>
            <span asp-validation-for="EmployeId" class="text-danger text-sm"></span>
        </div>

        <!-- Priorité -->
        <div class="form-group mb-4">
            <label asp-for="Priorite" class="block text-gray-700 font-medium">Priorité</label>
            <input asp-for="Priorite" class="form-input w-full border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Priorite" class="text-danger text-sm"></span>
        </div>

        <!-- Submit button -->
        <div class="form-group mt-6 flex justify-between">
            <button type="submit" class="btn bg-blue-600 text-white py-2 px-6 rounded-md hover:bg-blue-700 focus:outline-none">Enregistrer</button>
            <a asp-action="Index" class="btn bg-gray-500 text-white py-2 px-6 rounded-md hover:bg-gray-600 focus:outline-none">Annuler</a>
        </div>
    </form>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="text-blue-600 hover:underline">Retour à la liste</a>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
